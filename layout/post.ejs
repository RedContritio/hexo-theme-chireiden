<div class="chireiden-post">

  <article>
      <% if (page.cover){ %>
          <div class="chireiden-post-cover" style="padding-bottom: <%- page.coverHeight/page.coverWidth*100 %>%;"> 
              <img src="<%- page.cover %>" alt="<%= page.title %>" loading="lazy">
              <h1><%= page.title %></h1>
          </div>
      <% } %>
      
      <%- partial('_partial/_post/meta') %>

      <%- partial('_partial/_post/word-count', {post: page}) %>

      <%- page.content %>
  </article>

  <% if (!page.reprint){ %>
      <%- partial('_partial/copyright') %>
  <% } %>
  
  <%- partial('_partial/_post/tag') %>

  <% if (page.comments){ %>
      <div class="chireiden-post-footer">
          <%- theme.comment ? partial('_partial/comment') : '' %>
      </div>
  <% } %>
</div>