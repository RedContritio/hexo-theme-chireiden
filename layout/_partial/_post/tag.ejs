<div class="chireiden-post-meta chireiden-rainbow">
    <% if (page.categories && page.categories.length){ %>
        <%- list_categories(page.categories, {
            show_count: false,
            class: 'chireidenfont icon-appstore-fill ',
            style: 'none',
            separator: ''
        }) %>
    <% } %>
    <% if (page.tags && page.tags.length){ %>
        <%- list_tags(page.tags, {
            show_count: false,
            class: 'chireidenfont icon-tag-fill ',
            style: 'none',
            separator: ' '
        }) %>
    <% } %>
</div>