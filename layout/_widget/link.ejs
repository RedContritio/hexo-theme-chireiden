<div class="chireiden-widget-wrap">
    <div class="chireiden-widget chireiden-link">
		<ul>
        <% if(theme.widgetLink){
            theme.widgetLink.forEach(widget => { %>
            <li>
                <a href="<%- widget.link %>" target="_blank" >
                    <img src="<%- widget.img %>" alt="<%- widget.title %>"></img>
                    <p><%- widget.title %></p>
                </a>
            </li>
        <% })} %>
		</ul>
    </div>
</div>
<style>
.chireiden-widget-wrap .chireiden-link ul li a {
    text-align : center;
}
.chireiden-widget-wrap .chireiden-link ul li a img {
    max-width : 200px;
}
.chireiden-widget-wrap .chireiden-link ul li a p {
    margin: 10px 0;
}
</style>
